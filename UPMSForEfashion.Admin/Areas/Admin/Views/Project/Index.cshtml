@using UPMSForEfashion.Common;
@using UPMSForEfashion.Model
@model UPMSForEfashion.Common.ListResult<user>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutForMain.cshtml";
}

<div class="panel-heading">
    <ol class="breadcrumb">
        <li><a href="#">Home</a></li>
        <li><a href="#">Library</a></li>
        <li class="active">Data</li>
    </ol>
</div>
<div class="panel-body">
    <table class="table table-bordered table-hover">
        <thead>
            <tr>
                <td>ID</td>
                <td>Name</td>

            </tr>
        </thead>
        <tbody>
            @{
                if (Model.TotalItemCount > 0)
                {
                    foreach (var item in Model.Rows)
                    {
                        <tr>
                            <td>@item.ID</td>
                            <td>@item.RealName</td>
                        </tr>
                    }
                }
            }
        </tbody>
    </table>
    <nav aria-label="Page navigation">
        <ul class="pagination">
             @PageList.Instance.GetPage(Model.PageIndex, Model.PageSize, 100, Url.Action("Index"))
        </ul>
        <div class="pagination" style="text-align:center;margin-left:1rem;">
            <span style="float:left;font-size:16px;">共有 @Model.PageCount 页，@Model.TotalItemCount 条数据</span>
        </div>
        
    </nav>
</div>
